<Window x:Class="PetShop.Authentication.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.Authentication" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="ForgotPassword" 
        Height="457"
        Width="705"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        
        >
    <Border Background="White"
>

        <Border Background="White" BorderThickness="3">



            <Grid>


                <Grid.RowDefinitions>

                    <RowDefinition/>

                </Grid.RowDefinitions>


                <Grid Grid.Row="0">


                    <!--Grid for column definition-->
                    <Grid.ColumnDefinitions>

                        <!--First column-->
                        <ColumnDefinition />

                        <!--Second column-->
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>



                    <!--Image for the first column of row 2-->
                    <Image 
                              Grid.Column="0"
                              HorizontalAlignment="Left" Stretch="Fill"
                               Source="pack://application:,,,/Resources/PetImage.jpg"/>

                    <!--Grid for the column 1-->
                    <Grid Grid.Row="0" Grid.Column="1">



                        <Grid.RowDefinitions>

                            <!--Row that holds the the three columns-->
                            <RowDefinition Height="30"/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>

                        <!--Border for the row 1-->
                        <Border BorderBrush="Black" Grid.Row="0">



                        </Border>


                        <Grid>


                            <Grid.ColumnDefinitions>


                                <!--Minimize button column-->
                                <ColumnDefinition/>

                                <!--Maximize button column-->
                                <ColumnDefinition/>

                                <!--Close button column-->
                                <ColumnDefinition/>

                            </Grid.ColumnDefinitions>

                            <!--Close button-->

                            <Button x:Name="Close" 
                                Grid.Column="3" 
                                Cursor="Hand"
                                Background="#0b8707"
                                Click="Close_Click"
                                    HorizontalAlignment="Right"
                                Style="{StaticResource MinimizeButtonStyle}"
    >

                                <Icon:PackIconMaterial 
                                    x:Name="CloseWindow"
                                    Kind="WindowClose" 
                                    Grid.Column="3"
                                    Height="10" RenderTransformOrigin="0.803,0.533"
                                    Width="12"
                                    Foreground="White"
                                     Style="{StaticResource WindowControlIcon}"
                                    Cursor="Hand"
                                />

                            </Button>

                        </Grid>

                        <!--Dumbbel icon-->
                        <Icon:PackIconMaterial 
                                   Kind="Paw"
                                   Margin="0,10,42,0"
                                   Height="32" RenderTransformOrigin="0.803,0.533"
                                   HorizontalAlignment="Right"
                                   Width="44" Grid.Row="1"
                             />

                        <!--Email icon-->
                        <Icon:PackIconMaterial 
                              Kind="Email"
                              Margin="0,180,262,0"
                              Height="16" RenderTransformOrigin="0.803,0.533"
                              HorizontalAlignment="Right"
                              Width="36" Grid.Row="1"/>


                        <!--Email icon-->
                        <Icon:PackIconMaterial 
                               Kind="ShieldAccount"
                               Margin="0,270,260,0"
                               Height="21" RenderTransformOrigin="0.803,0.533"
                               HorizontalAlignment="Right"
                               Width="38" Grid.Row="1"/>







                        <!--Title-->

                        <TextBlock Text="Forgot password"
                                       Grid.Row="1"
                                       FontWeight="DemiBold"
                                       FontSize="12" Margin="127,10,128,392"
                                       />

                        <!--Description-->

                        <TextBlock Text="Verify your email first before"
                                       Grid.Row="1"                                     
                                       FontSize="10"
                                       Foreground="Gray"
                                       Height="15" Margin="109,34,110,372" RenderTransformOrigin="0.503,1.111"
                                       />
                        <TextBlock Text="sendind OTP"
                              Grid.Row="1"                                     
                              FontSize="10"
                              Foreground="Gray"
                              Height="15" Margin="145,53,146,353" RenderTransformOrigin="0.503,1.111"
                              />

                        <!--Email textbox-->


                        <TextBox x:Name="Email"
                                Style="{StaticResource TextBoxes}" 
                                Margin="84,170,72,225"
                                MaxLength="30"
                                BorderBrush="#727272" Grid.Row="1" 
                                PreviewTextInput="Email_PreviewTextInput"
                                 PreviewKeyDown="Email_PreviewKeyDown"
                                />


                        <!--Verify email-->

                        <Button x:Name="SendOTP" 
                              Style="{StaticResource SubmitButton}" 
                              Margin="0,223,70,173" 
                              Width="196"
                              Content="Send OTP"
                              BorderThickness="0"
                              Grid.Row="1"
                                Click="SendOTP_Click"
                                 />

                        <!--OTP textbox-->

                        <TextBox x:Name="OTP"
                                Style="{StaticResource TextBoxes}" 
                                Margin="84,266,70,130"
                                MaxLength="6"
                                BorderBrush="#727272" Grid.Row="1" 
                                PreviewTextInput="OTP_PreviewTextInput"
                                PreviewKeyDown="OTP_PreviewKeyDown"
                                />

                        <!--Login button-->

                        <Button x:Name="SubmitOTP" 
                                 Style="{StaticResource SubmitButton}" 
                                 Margin="83,318,0,78" 
                                 Width="196"
                                 Content="Submit"
                                 BorderThickness="0"
                                 Grid.Row="1" HorizontalAlignment="Left"
                             
                                  Click="SubmitOTP_Click"
                                 />


                    </Grid>
                </Grid>
            </Grid>


        </Border>

    </Border>

</Window>
