<Window x:Class="PetShop.WinForms.UpsertForms.Receipt.Template"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.WinForms.UpsertForms.Receipt"
        mc:Ignorable="d"
        Title="Receipt Preview" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded"
        
        Height="600"
        Width="400">

    <Border x:Name="MainBorder"  
            Background="White"
            Cursor="No" 
            BorderBrush="LightGray" 
            BorderThickness="0.5">
        <Grid>
            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="150"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
                <!-- Footer -->
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0">
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <!-- Logo -->
                    <Image Source="pack://application:,,,/Resources/Logo.jpg"
                         Width="60"
                         Margin="0,6,0,0"/>

                    <!-- Store Information -->
                    <TextBlock TextAlignment="Center" 
                             FontSize="12"
                             FontWeight="Bold"
                             Text="PET SHOP"
                             Margin="0,5,0,0"/>

                    <TextBlock TextAlignment="Center" 
                             FontSize="10"
                             Text="49 Agno Ext tatalon Quezon City"/>

              

                    <TextBlock TextAlignment="Center"
                             FontSize="10"
                             Text="Phone: 09562512174"
                             TextWrapping="Wrap"/>

                    <!-- Receipt Title -->
                    <TextBlock TextAlignment="Center"
                             FontSize="12"
                             FontWeight="Bold"
                             Margin="0,10,0,0"
                             Text="RECEIPT"
                             TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Content Section -->
            <Border Grid.Row="1" Margin="20,10">
                <StackPanel>
                    <!-- Receipt Details -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Receipt No:" FontSize="10" FontWeight="Bold"/>
                            <TextBlock x:Name="ReceiptNoText" Text="RCP-001234" FontSize="10"/>

                            <TextBlock Text="Date:" FontSize="10" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="DateText"  FontSize="10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Cashier:" FontSize="10" FontWeight="Bold"/>
                            <TextBlock x:Name="CashierText" Text="John Doe" FontSize="10"/>

                            <TextBlock Text="Time:" FontSize="10" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="TimeText" Text="2:30 PM" FontSize="10"/>
                        </StackPanel>
                    </Grid>

                    <!-- Separator Line -->
                    <Border Height="1" Background="Black" Margin="0,5"/>

                    <!-- Items Header -->
                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Item" FontSize="10" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Qty" FontSize="10" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Price" FontSize="10" FontWeight="Bold" TextAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="Total" FontSize="10" FontWeight="Bold" TextAlignment="Right"/>
                    </Grid>

                    <!-- Items List -->
                    <ItemsControl x:Name="ItemsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="9" TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Quantity}" FontSize="9" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat=₱{0:N2}}" FontSize="9" TextAlignment="Right"/>
                                    <TextBlock Grid.Column="3" Text="{Binding SubTotal, StringFormat=₱{0:N2}}" FontSize="9" TextAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                  


                    <!--<Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Cat Toy Ball" FontSize="9"/>
                        <TextBlock Grid.Column="1" Text="1" FontSize="9" TextAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="₱150.00" FontSize="9" TextAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="₱150.00" FontSize="9" TextAlignment="Right"/>
                    </Grid>--><!--

                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Pet Shampoo" FontSize="9"/>
                        <TextBlock Grid.Column="1" Text="1" FontSize="9" TextAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="₱200.00" FontSize="9" TextAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="₱200.00" FontSize="9" TextAlignment="Right"/>
                    </Grid>-->

                    <!-- Separator Line -->
                    <Border Height="1" Background="Black" Margin="0,10,0,5"/>

                    <!-- Totals Section -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0">

                            <StackPanel Orientation="Vertical">
                                <!--<TextBlock Grid.Column="0" Text="Subtotal:" FontSize="10" TextAlignment="Right" Margin="0,0,10,0"/>-->

                                <TextBlock Grid.Column="0" Grid.Row="2" Text="TOTAL:" FontSize="12" FontWeight="Bold" TextAlignment="Right" Margin="0,5,10,0"/>
                                <TextBlock Grid.Column="0" Grid.Row="3" Text="Amount Paid:" FontSize="10" TextAlignment="Right" Margin="0,5,10,0"/>
                                <TextBlock Grid.Column="0" Grid.Row="4" Text="Change:" FontSize="10" FontWeight="Bold" TextAlignment="Right" Margin="0,2,10,0"/>

                            </StackPanel>
                            
                            
                        </Border>
                        <Border Grid.Column="1">

                            <StackPanel Orientation="Vertical">
                                <!-- Subtotal -->
                                <!--<TextBlock Grid.Column="1" x:Name="SubtotalText" Text="₱850.00" FontSize="10" TextAlignment="Right"/>-->
                                <!-- Total -->
                                <TextBlock Grid.Column="1" Grid.Row="2" x:Name="TotalText" Text="₱952.00" FontSize="12" FontWeight="Bold" TextAlignment="Right" Margin="0,5,0,0"/>

                                <!-- Amount Paid -->
                                <TextBlock Grid.Column="1" Grid.Row="3" x:Name="AmountPaidText" Text="₱1,000.00" FontSize="10" TextAlignment="Right" Margin="0,5,0,0"/>

                                <!-- Change -->
                                <TextBlock Grid.Column="1" Grid.Row="4" x:Name="ChangeText" Text="₱48.00" FontSize="10" FontWeight="Bold" TextAlignment="Right" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    

                     

                       
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Footer Section -->
            <Border Grid.Row="2">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Thank you for your purchase!" 
                             FontSize="10" 
                             FontWeight="Bold"
                             TextAlignment="Center"/>

                    <TextBlock Text="Please keep this receipt for your records" 
                             FontSize="8" 
                             TextAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>