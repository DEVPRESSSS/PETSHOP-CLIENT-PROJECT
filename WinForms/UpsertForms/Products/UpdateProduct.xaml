<Window x:Class="PetShop.WinForms.UpsertForms.Products.UpdateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.WinForms.UpsertForms.Products" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="UpdateProduct"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Height="300" Width="600"
        >
    
    <Border Background="White"
         BorderBrush="Gray"
         BorderThickness="1"
         CornerRadius="10">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!--Border for row 0-->
            <Border Grid.Row="0"
                 Background="#FF4966"
                 CornerRadius="10,10,0,0"
                 Margin="-1,-1,-1,0"
                   >

                <Button x:Name="CloseBtn"
                 Style="{StaticResource MinimizeButtonStyle}"
                 HorizontalAlignment="Right"
                 Margin="0,0,4,0"
                 Cursor="Hand"
                 Click="CloseBtn_Click"
                     >


                    <Icon:PackIconMaterial 
                      Kind="Close" 
                      VerticalAlignment="Center"
                      Height="10"
                      HorizontalAlignment="Right"
                      Width="16"
                  />

                </Button>
            </Border>


            <Border Grid.Row="1">

                <Image Margin="4"
                 Source="D:\ASP_PROJECTS\PetShop\Resources\Logo.jpg">

                </Image>

            </Border>

            <!--Border for row 2-->
            <Border Grid.Row="2" >

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">


                        <StackPanel Orientation="Vertical">

                            <!--Firstname-->
                            <Label Content="Name"
                                FontSize="12"
                                Margin="0,0,0,0" 
                                Width="271"/>

                            <TextBox x:Name="ProductName" 
                                     Height="25"
                                     MaxLength="20"
                                     PreviewTextInput="ProductName_PreviewTextInput"
                                     PreviewKeyDown="ProductName_PreviewKeyDown"
                                  Width="260" />

                            <!--Lastname-->
                            <Label Content="Price"
                                Margin="0,0,0,0" 
                                FontSize="12"
                                Width="271"/>

                            <TextBox x:Name="Price" Height="25"
                                  FontSize="12"
                                     PreviewTextInput="Quantity_PreviewTextInput"
                                     PreviewKeyDown="Quantity_PreviewKeyDown"
                                  Width="260" />

                            <!--Gmail-->

                        </StackPanel>

                    </Border>
                    <Border Grid.Column="1">


                        <StackPanel Orientation="Vertical">

                            <Label Content="Quantity"
                               Margin="0,0,0,0" 
                                Width="271"/>
                            <TextBox x:Name="Quantity"
                                   PreviewTextInput="Quantity_PreviewTextInput"
                                     PreviewKeyDown="Quantity_PreviewKeyDown"
                                  Height="25"
                                  FontSize="12"
                                  Width="260" />

                            <Label Content="Category"
                              Margin="0,0,0,0" Width="271"/>

                            <ComboBox x:Name="ProductCategory"
                                   Width="260"
                                   Height="25"
                                   SelectedIndex="0">

                                <ComboBoxItem Content="Cat food" />
                                <ComboBoxItem Content="Cat" />
                                <ComboBoxItem Content="Dog Food" />
                                <ComboBoxItem Content="Bird" />
                                <ComboBoxItem Content="Dog" />
                                <ComboBoxItem Content="Fish" />
                            </ComboBox>


                        </StackPanel>

                    </Border>

                </Grid>




            </Border>

            <!--Border for row 3-->
            <Border Grid.Row="3">

                <Button x:Name="UpdateBtn" Grid.Column="1" 
               Style="{StaticResource SubmitButton}" 
               Width="NaN"
               Content="Update"
               Click="UpdateBtn_Click"
               Cursor="Hand"
               BorderThickness="0" 
               Margin="10,12,10,12" HorizontalAlignment="Stretch"
               />


            </Border>
        </Grid>

    </Border>
</Window>
