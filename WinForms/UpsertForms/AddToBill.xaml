                    <Icon:PackIconMaterial 
                        Kind="Close" 
                        VerticalAlignment="Center"
                        Height="10"
                        HorizontalAlignment="Right"
                        Width="16"
                    />

                </Button>

            </Border>
            
            <!--Content-->
            <Border Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <TextBox Width="120"
                          Foreground="Green"
                          FontSize="16"
                          BorderBrush="White"
                          BorderThickness="0"
                          IsReadOnly="True"
                          FontWeight="Bold"
                           Text="Current Stock:"
                          HorizontalAlignment="Right"/>

                    <TextBox x:Name="Stock" Width="81"
                             Foreground="Green"
                             FontSize="14"
                             BorderBrush="White"
                             BorderThickness="0"
                             IsReadOnly="True"
                             FontWeight="Bold"
                             HorizontalAlignment="Right"/>

                    <TextBlock x:Name="ProductName"
