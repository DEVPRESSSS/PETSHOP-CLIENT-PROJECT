<UserControl x:Class="PetShop.UCpages.Sale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PetShop.UCpages"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="White"
             Loaded="UserControl_Loaded"
             >
    <Border x:Name="PageBorder">


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Border
                  Background="#F4F5F6"
                  BorderThickness="0,0,0,1"
                  Grid.Row="0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Left-aligned -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Right-aligned -->
                    </Grid.ColumnDefinitions>

                    <!-- Left-aligned Export Button -->
                    <TextBox x:Name="SearchName" Width="170"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0"
                          ToolTip="Search here"
                          MaxLength="30"
                          TextChanged="SearchName_TextChanged"
                          Height="25">

                    </TextBox>


                </Grid>
            </Border>


            <Border Grid.Row="1">
                <!--Employee Table-->

                <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                    CellStyle="{DynamicResource DataGridCellStyle1}" 
                    x:Name="SaleTable" Style="{DynamicResource DataGridStyle1}"
                    AutoGenerateColumns="False">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="BillId" CanUserResize="False"  Binding="{Binding BillId}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Name" CanUserResize="False"  Binding="{Binding ProductName}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="AmountPaid" CanUserResize="False"  Binding="{Binding AmountPaid}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Qty" CanUserResize="False"  Binding="{Binding Quantity}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Price" CanUserResize="False" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="SubTotal" CanUserResize="False" Binding="{Binding SubTotal, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="GrandTotal" CanUserResize="False" Binding="{Binding GrandTotal, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Cashier" CanUserResize="False" Binding="{Binding CashierName, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Date" CanUserResize="False" Binding="{Binding DateOfTransaction, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="*"/>

                        <!--<DataGridTemplateColumn Header="Action" CanUserResize="False" IsReadOnly="True" Width="*">
                         <DataGridTemplateColumn.CellTemplate>
                             <DataTemplate>
                                 <StackPanel Orientation="Horizontal">
                                     <Button x:Name="editBtn" Style="{StaticResource gridEditButton}" Click="editBtn_Click" >
                                         <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}"/>
                                     </Button>
                                     <Button x:Name="deleteBtn" Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}" Click="deleteBtn_Click_1"
                                          
                                         >
                                         <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}"/>
                                     </Button>
                                 </StackPanel>
                             </DataTemplate>
                         </DataGridTemplateColumn.CellTemplate>
                     </DataGridTemplateColumn>-->
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
        </Grid>


    </Border>
</UserControl>
