<Window x:Class="PetShop.UCpages.Cashier.CashierDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop.UCpages.Cashier" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="CashierDashboard"     
         Height="500" 
         WindowStyle="None"
         WindowStartupLocation="CenterScreen"
         AllowsTransparency="True"
         Background="Transparent"
         MouseDown="Window_MouseDown"
         Width="1000"
        >

    <Border Background="White">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Border Grid.Row="0" 
                    Background="#FF4966"
                    BorderBrush="#FF4966" 
                    BorderThickness="1">

                <Border Grid.Row="0" 
                        Background="#FF4966"
                        BorderBrush="#FF4966" 
                        BorderThickness="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Welcome text -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Username -->
                            <ColumnDefinition Width="*"/>
                            <!-- Spacer -->
                            <ColumnDefinition Width="30"/>
                            <!-- Minimize -->
                            <ColumnDefinition Width="30"/>
                            <!-- Maximize -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- Logout -->
                        </Grid.ColumnDefinitions>

                        <!-- Left side texts -->
                        <TextBlock Text="Welcome cashier:"
                               Foreground="White"
                               FontSize="12"
                               Margin="5"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Grid.Column="0"/>

                        <TextBlock Text="Mark Vergara"
                           Foreground="White"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="5"
                           FontWeight="Bold"
                           Grid.Column="1"/>


                        <!-- Minimize Button -->
                        <Button x:Name="Minimize" 
                            Grid.Column="3"
                            Click="Minimize_Click"
                            Background="Transparent"
                            Style="{StaticResource MinimizeButtonStyle}">
                                            <Icon:PackIconMaterial 
                             x:Name="MinimizeWindow"
                             Kind="Minus" 
                             Height="10"
                             Width="12"
                             Foreground="White"
                             Style="{StaticResource WindowControlIcon}"
                             Cursor="Hand"/>
                        </Button>


                        <!-- Maximize Button -->
                        <Button x:Name="Maximize"
                            Grid.Column="4"
                            Cursor="Hand"
                            Background="Transparent"
                            Click="Maximize_Click"
                            Style="{StaticResource MinimizeButtonStyle}">
                                            <Icon:PackIconMaterial 
                            x:Name="MaximizeWindow"
                            Kind="WindowMaximize" 
                            Height="10"
                            Width="12"
                            Foreground="White"
                            Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand"/>
                        </Button>


                        <!-- Logout Button -->
                        <Button x:Name="Logout" 
                            Grid.Column="5" 
                            Cursor="Hand"
                            Height="20"
                            Width="40"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Click="Logout_Click"
                            Style="{StaticResource MinimizeButtonStyle}">
                                            <Icon:PackIconMaterial 
                            x:Name="CloseWindow"
                            Kind="Power" 
                            Height="14"
                            Width="14"
                            Foreground="White"
                            Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand"/>
                        </Button>
                    </Grid>

                </Border>



            </Border>
            <Border Margin="10" 
                    Grid.Row="1"
                    BorderBrush="#FF4966"
                    BorderThickness="2"
                    CornerRadius="10"
                    >

                <ContentControl x:Name="MainContentArea">



                </ContentControl>

            </Border>
        </Grid>
        
    </Border>
    
</Window>
